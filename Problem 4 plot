import numpy as np
import matplotlib.pyplot as plt
file=open('KK.txt','r')
sampled_data=np.loadtxt(file)
b=20
plt.hist(sampled_data, b, histtype='bar', ec='black')
binheights=plt.hist(sampled_data,b)[0]
xarr=np.linspace(0,np.amax(sampled_data),b)
true=0.5*np.exp(-0.5*xarr)*2*np.amax(binheights)
plt.plot(true, color='blue')
